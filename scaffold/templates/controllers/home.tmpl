package controllers

import (
    "net/http"

    web "github.com/fyerfyer/fyer-webframe"
)

// HomeController 处理首页相关的请求
type HomeController struct{}

// NewHomeController 创建一个新的首页控制器
func NewHomeController() *HomeController {
    return &HomeController{}
}

// Index 处理首页请求
func (c *HomeController) Index(ctx *web.Context) {
    data := map[string]interface{}{
        "Title":   "欢迎使用 {{ .ProjectName }}",
        "Message": "您的应用已成功运行！",
    }

    err := ctx.Template("home.html", data)
    if err != nil {
        ctx.InternalServerError("无法渲染首页模板")
        return
    }
}

// About 处理关于页面请求
func (c *HomeController) About(ctx *web.Context) {
    data := map[string]interface{}{
        "Title":   "关于 {{ .ProjectName }}",
        "Message": "这是一个使用fyer-webframe框架创建的Web应用。",
        "Version": "{{ .Version }}",
    }

    err := ctx.Template("home.html", data)
    if err != nil {
        ctx.InternalServerError("无法渲染关于页面模板")
        return
    }
}

// NotFound 处理404页面请求
func (c *HomeController) NotFound(ctx *web.Context) {
    ctx.Status(http.StatusNotFound)

    data := map[string]interface{}{
        "Title":   "404 - 页面未找到",
        "Message": "您请求的页面不存在。",
    }

    err := ctx.Template("home.html", data)
    if err != nil {
        ctx.NotFound("页面未找到")
    }
}

// Error 处理500页面请求
func (c *HomeController) Error(ctx *web.Context) {
    ctx.Status(http.StatusInternalServerError)

    data := map[string]interface{}{
        "Title":   "500 - 服务器错误",
        "Message": "服务器处理您的请求时出现了问题。",
    }

    err := ctx.Template("home.html", data)
    if err != nil {
        ctx.InternalServerError("服务器内部错误")
    }
}

// API 示例API端点
func (c *HomeController) API(ctx *web.Context) {
    ctx.JSON(http.StatusOK, map[string]interface{}{
        "status":  "success",
        "message": "API工作正常",
        "data": map[string]interface{}{
            "app":     "{{ .ProjectName }}",
        },
    })
}